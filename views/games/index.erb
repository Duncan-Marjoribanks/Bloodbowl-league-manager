<h1>Games Played</h1>
<hr>
<table>
  <tr>
    <a href='/games/add_game'>Log game</a>
  </tr>
  <tr>
    <th>Team A</th>
    <th>Team B</th>
    <th>Winner</th>
    <hr>
  </tr>
  <hr>
  <% for game in @games %>
  <tr>
    <td><a href='/games/<%game.id%>'>
    <%= game.team(game.team_a, "team_a").name.capitalize %></a>
    <hr>
  </td>
    <td><a href='/games/<%game.id%>'>
    <%= game.team(game.team_b, "team_b").name.capitalize %></a>
    <hr>
  </td>
    <td><a href='/games/<%game.id%>'>
    <%= game.team(game.winner, "winner").name.capitalize %></a>
    <hr>
  </td>

  </tr>

  <% end %>

</table>
