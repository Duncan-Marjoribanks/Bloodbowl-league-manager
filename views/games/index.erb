<h1>Games Played</h1>
<hr>
<table>
  <tr>
    <a href='/games/add_game'>Log game</a>
  </tr>
  <tr>
    <th>Team A</th>
    <th>Team B</th>
    <th>Winner</th>
    <hr>
  </tr>
  <hr>
  <% for game in @games %>
  <tr>
    <td><a href='/teams/<%=game.team_a%>'>
    <%= game.team(game.team_a, "team_a").name %></a>
    <hr>
  </td>
    <td><a href='/teams/<%= game.team_b%>'>
    <%= game.team(game.team_b, "team_b").name %></a>
    <hr>
  </td>
    <td><a href='/teams/<%= game.winner%>'>
    <%= game.team(game.winner, "winner").name %></a>
    <hr>
  </td>

  </tr>

  <% end %>
</table>

<form action="/games/delete_all" method="post">
  <label for="delete_all">Warning - This will Delete ALL Games</label>
  <input type="submit" value="Clear League Table" id="delete_all">
</form>
