<div class="games_page">

<h1>Games Played</h1>
<hr>
<table>
  <tr>
    <a href='/games/add_game'>Log game</a>
  </tr>
  <tr>
    <th>Home Team Logo</th>
    <th>Home Team Name</th>
    <th>Home Score</th>
    <th>Away Team Logo</th>
    <th>Away Team Name</th>
    <th>Away Score</th>
    <th>Winner Logo</th>
    <th>Winner Name</th>

  </tr>

  <% for game in @games %>
  <tr>
    <td><img src="<%=Team.find(game.home).logo%>" alt="team_logo"></td>
    <td><a href='/teams/<%=game.home%>'>
    <%= game.team(game.home, "home").name %></a>

  </td>
   <td><%= game.home_score() %></td>
 <td><img src="<%=Team.find(game.away).logo%>" alt="team_logo"></td>
    <td><a href='/teams/<%= game.away%>'>
    <%= game.team(game.away, "away").name %></a>

  </td>
   <td><%= game.away_score() %></td>
     <td><img src="<%=Team.find(game.winner).logo%>" alt="team_logo"></td>
   <td><a href="/teams/<%=Team.find(game.winner).id %>"><%=Team.find(game.winner).name %></td>

</tr>
  <% end %>
</table>

<form action="/games/delete_all" method="post">
  <label for="delete_all">Warning - This will Delete ALL Games</label>
  <input type="checkbox" name="confirmation" value="Clear League Table"required="required">
  <input type="submit" value="Clear League Table" id="delete_all">
</form>

</div>
